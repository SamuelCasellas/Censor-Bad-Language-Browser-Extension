{
  "manifest_version": 3,
  "name": "Purified Streaming",
  "description": "Censor audio for bad language on Netflix and YouTube, as well as all text on any other webpage.",
  "version": "0.3.2",
  "permissions": [
    "storage"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "exclude_matches": ["https://*.churchofjesuschrist.org/*"],
      "js": [
        "chromeStorageFunctions.js",
        "utils.js",
        "script.js"]
    },
    {
      "matches": ["https://www.netflix.com/*"],
      "js": [
        "chromeStorageFunctions.js", 
        "syllablesParsing.js", 
        "script.js", 
        "monitorNetflix.js"
      ]
    },
    {
      "matches": ["https://www.youtube.com/*"],
      "js": [
        "chromeStorageFunctions.js", 
        "queue.js",
        "syllablesParsing.js", 
        "utils.js",
        "script.js",
        "monitorYt.js" 
      ]
    }
  ], 
  "action": {
    "default_icon": "Cursing-Extension-Icon.png",
    "default_title": "Filter Settings",
    "default_popup": "popup/index.html"
  },
  "icons": {
    "128": "Cursing-Extension-Icon.png"
  }
}
